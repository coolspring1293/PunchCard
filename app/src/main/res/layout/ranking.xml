                android:layout_gravity="center_vertical"
                ></TextView>
            <ImageView android:src="@drawable/mao5"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
