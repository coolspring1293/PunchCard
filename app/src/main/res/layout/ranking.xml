<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <com.team10.punchcard.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.team10.punchcard.TitleView>

    <!-- 排行榜TableLayout，使用可伸展特性布局-->
    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TableRow android:padding="10dip"
            android:background="#bfbfbf">
            <TextView android:text="1"
                android:textSize="25sp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                ></TextView>
            <ImageView android:src="@drawable/mao1"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

            <TextView android:text="郑晓钿"
                android:layout_weight="8"
                android:layout_gravity="center_vertical">
            </TextView>
            <ImageView android:src="@drawable/coin"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView android:text="$1111"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"></TextView>

            <ImageView android:src="@drawable/calendal"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView android:text="100天"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"></TextView>
        </TableRow>
        <TableRow android:padding="10dip"
            android:background="#ffffff">
            <TextView android:text="2"
                android:textSize="25sp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                ></TextView>
            <ImageView android:src="@drawable/mao2"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

            <TextView android:text="黄若孜"
                android:layout_weight="8"
                android:layout_gravity="center_vertical">
            </TextView>
            <ImageView android:src="@drawable/coin"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView android:text="$998"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"></TextView>

            <ImageView android:src="@drawable/calendal"
